{# {% extends 'base.html.twig' %} #}
{% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
        {# <link rel="stylesheet" href="css/form.css"> #}
        {% endblock %}

<style>
        .font {
    font-family: 'Fuzzy Bubbles', cursive;
}
    </style>

{% block title %}<h1 class=" text-center font m-5">Connexion Admin</h1>{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div style="height: 250px;"></div>
<div class="example-wrapper">
     {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<div class="row mx-auto text-center d-flex flex-column justify-content-center">
    <div class="col-12 mt-2">
        <form action="{{ path('app_login') }}" method="post">
                <label for="username">Nom</label></br>
                <input class="w-75" type="text" id="username" name="_username"/></br>

                <label for="password">Mot de passe</label></br>
                <input class="w-75 m-2" type="password" id="password" name="_password"/></br>

                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"/> #}

                <a href="path('page')"><button class="m-2 btn btn-success" type="submit">Se connecter</button></a>
        </form>
</div>
{% endblock %}
